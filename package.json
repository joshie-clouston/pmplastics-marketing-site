{
  "name": "pmplastics-marketing-site",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler types && astro dev",
    "build": "wrangler types && astro check && astro build",
    "preview": "astro preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "npx wrangler d1 execute pmplastics --local --file=drizzle/migrations/0000_initial.sql",
    "db:migrate:remote": "npx wrangler d1 execute pmplastics --remote --file=drizzle/migrations/0000_initial.sql"
  },
  "dependencies": {
    "astro": "^5.4.1",
    "@astrojs/cloudflare": "^12.5.0",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/react": "^4.2.0",
    "@astrojs/check": "^0.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "animejs": "^3.2.2",
    "resend": "^4.2.0",
    "drizzle-orm": "^0.41.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/animejs": "^3.1.12",
    "drizzle-kit": "^0.30.5",
    "wrangler": "^4.1.0"
  }
}
