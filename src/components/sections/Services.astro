---
const services = [
  {
    title: 'CNC Water Jet Cutting',
    description: 'Precision cutting of virtually any material up to 150mm thick. No heat-affected zones — clean edges, tight tolerances.',
    icon: 'water-jet',
  },
  {
    title: 'CNC Vacuum Forming',
    description: 'Custom moulds and formed plastic components for industrial, commercial, and retail applications.',
    icon: 'vacuum',
  },
  {
    title: 'CNC Router Cutting',
    description: 'Complex shapes, profiles, and 3D contours cut with computer-controlled precision in any plastic.',
    icon: 'router',
  },
  {
    title: 'CNC Laser Cutting',
    description: 'Fine detail cutting and intricate designs with sub-millimetre accuracy. Ideal for signage and display work.',
    icon: 'laser',
  },
  {
    title: 'Plastic Thermo Forming',
    description: 'Heat-formed plastic for custom shapes — skylights, covers, guards, panels, and bespoke components.',
    icon: 'thermo',
  },
  {
    title: '2D & 3D Laser Engraving',
    description: 'Detailed engraving and etching on acrylic, perspex, and other surfaces. Signage, awards, and branding.',
    icon: 'engrave',
  },
];

const iconPaths: Record<string, string> = {
  'water-jet': 'M12 2L4 7v10l8 5 8-5V7l-8-5zM12 22V12M20 7l-8 5-8-5',
  'vacuum': 'M4 14h16M4 14V8a4 4 0 014-4h8a4 4 0 014 4v6M4 14v4a2 2 0 002 2h12a2 2 0 002-2v-4',
  'router': 'M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zM14 2v6h6M12 18v-6M9 15l3-3 3 3',
  'laser': 'M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83',
  'thermo': 'M12 9a4 4 0 00-4 4v6a4 4 0 008 0v-6a4 4 0 00-4-4zM12 3v2M5.6 5.6l1.4 1.4M18.4 5.6l-1.4 1.4M3 12h2M19 12h2',
  'engrave': 'M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z',
};
---
<section class="section bg-white" id="services">
  <div class="container mx-auto">
    <div class="text-center mb-12" data-animate="fade-up">
      <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-4">What We Do</h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Full-service plastic fabrication with advanced CNC equipment. Whatever the material, whatever the shape — we make it happen.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6" data-animate="stagger">
      {services.map((service) => (
        <div class="group p-6 rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
              <path d={iconPaths[service.icon]} />
            </svg>
          </div>
          <h3 class="font-700 text-lg mb-2">{service.title}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
