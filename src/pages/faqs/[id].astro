---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import StructuredData from '../../components/schema/StructuredData.astro';
import SecondaryCTA from '../../components/sections/SecondaryCTA.astro';

export const prerender = true;

export async function getStaticPaths() {
  const faqs = await getCollection('faqs', ({ data }) => !data.draft);
  return faqs.map((entry) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---
<BaseLayout title={entry.data.title} description={entry.data.description}>
  <StructuredData slot="structured-data" data={{
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": entry.data.questions.map((q) => ({
      "@type": "Question",
      "name": q.question,
      "acceptedAnswer": { "@type": "Answer", "text": q.answer },
    })),
  }} />

  <section class="section bg-secondary text-secondary-foreground">
    <div class="container mx-auto max-w-3xl">
      <a href="/faqs" class="inline-flex items-center gap-1 text-sm font-medium text-gray-400 hover:text-white mb-6 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
        All FAQs
      </a>
      <h1 class="text-4xl sm:text-5xl font-900 tracking-tight mb-4" data-animate="fade-up">{entry.data.title}</h1>
      <p class="text-lg text-gray-400" data-animate="fade-up">{entry.data.description}</p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container mx-auto max-w-3xl">
      <div class="prose prose-lg max-w-none mb-10" data-animate="fade-up">
        <Content />
      </div>

      <div class="space-y-4" data-animate="stagger">
        {entry.data.questions.map((q) => (
          <details class="group border border-border rounded-xl overflow-hidden" open>
            <summary class="flex items-center justify-between cursor-pointer p-5 font-600 text-foreground hover:bg-muted/50 transition-colors">
              {q.question}
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0 ml-4 text-muted-foreground group-open:rotate-180 transition-transform"><polyline points="6 9 12 15 18 9"/></svg>
            </summary>
            <div class="px-5 pb-5 text-muted-foreground leading-relaxed">{q.answer}</div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <SecondaryCTA
    heading="Still have questions?"
    description="Give us a call or send us a message."
  />
</BaseLayout>
