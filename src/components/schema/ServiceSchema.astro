---
import StructuredData from './StructuredData.astro';

interface Props {
  name: string;
  description: string;
  url: string;
  image?: string;
}

const { name, description, url, image } = Astro.props;

const service = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name,
  description,
  url: `https://www.pmplastics.com.au${url}`,
  ...(image && { image }),
  provider: {
    '@type': 'LocalBusiness',
    name: 'P&M Plastics',
    url: 'https://www.pmplastics.com.au',
  },
  areaServed: {
    '@type': 'GeoCircle',
    geoMidpoint: { '@type': 'GeoCoordinates', latitude: -28.0912, longitude: 153.4348 },
    geoRadius: '100000',
  },
};
---
<StructuredData data={service} />
