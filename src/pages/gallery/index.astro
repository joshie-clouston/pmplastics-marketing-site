---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContentCard from '../../components/ui/ContentCard.astro';
import SecondaryCTA from '../../components/sections/SecondaryCTA.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import ItemListSchema from '../../components/schema/ItemListSchema.astro';
import { resolveImage } from '../../lib/images';

export const prerender = true;

const galleries = (await getCollection('gallery', ({ data }) => !data.draft))
  .sort((a, b) => a.data.order - b.data.order);
---
<BaseLayout title="Gallery" description="See our work â€” custom plastic fabrication, vacuum forming, tanks, display products, and more. P&M Plastics, Gold Coast.">
  <BreadcrumbSchema items={[{ name: 'Gallery', href: '/gallery' }]} slot="structured-data" />
  <ItemListSchema name="Project Gallery" description="Browse our portfolio of custom plastic fabrication projects" items={galleries.map((g) => ({ name: g.data.title, url: `/gallery/${g.id}` }))} slot="structured-data" />

  <section class="section bg-secondary text-secondary-foreground">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl font-900 tracking-tight mb-4" data-animate="fade-up">Gallery</h1>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto" data-animate="fade-up">
        30 years of custom plastic fabrication. Browse our work by category.
      </p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container mx-auto">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6" data-animate="stagger">
        {galleries.map((gallery) => (
          <ContentCard
            href={`/gallery/${gallery.id}`}
            title={gallery.data.title}
            description={gallery.data.description}
            image={gallery.data.image ? resolveImage(gallery.data.image) : undefined}
            linkText="View gallery"
          />
        ))}
      </div>
    </div>
  </section>

  <SecondaryCTA
    heading="Like what you see?"
    description="Let's talk about your project. We'd love to bring your idea to life."
  />
</BaseLayout>
