---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import DetailHero from '../../components/layout/DetailHero.astro';
import GalleryGrid from '../../components/sections/GalleryGrid.astro';
import SecondaryCTA from '../../components/sections/SecondaryCTA.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import { resolveImage } from '../../lib/images';

export const prerender = true;

export async function getStaticPaths() {
  const galleries = await getCollection('gallery', ({ data }) => !data.draft);
  return galleries.map((entry) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const heroImage = entry.data.image ? resolveImage(entry.data.image) : undefined;
---
<BaseLayout title={`${entry.data.title} Gallery`} description={entry.data.description}>
  <BreadcrumbSchema items={[{ name: 'Gallery', href: '/gallery' }, { name: entry.data.title, href: `/gallery/${entry.id}` }]} slot="structured-data" />

  <DetailHero
    title={entry.data.title}
    description={entry.data.description}
    backLink="/gallery"
    backLabel="All Galleries"
    image={heroImage}
  />

  <section class="section bg-white">
    <div class="container mx-auto max-w-4xl">
      <div class="prose prose-lg max-w-none" data-animate="fade-up">
        <Content />
      </div>
    </div>
  </section>

  {entry.data.images.length > 0 && (
    <GalleryGrid images={entry.data.images} />
  )}

  <SecondaryCTA
    heading="Want something like this?"
    description="Tell us about your project and we'll make it happen."
  />
</BaseLayout>
