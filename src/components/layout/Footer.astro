---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import logo from '../../assets/images/logos/pm-plastics-logo-alt.png';

const services = (await getCollection('services', ({ data }) => !data.draft))
  .sort((a, b) => a.data.order - b.data.order);

const products = (await getCollection('products', ({ data }) => !data.draft))
  .sort((a, b) => a.data.order - b.data.order);
const productsByCategory = Object.groupBy(products, (p) => p.data.category ?? 'Other');
const productCategoryOrder = ['Architectural', 'Commercial', 'Domestic', 'Industrial'];

const materials = (await getCollection('materials', ({ data }) => !data.draft && data.category !== 'overview'))
  .sort((a, b) => a.data.order - b.data.order);
const materialsByCategory = Object.groupBy(materials, (m) => m.data.category);
const materialCategoryLabels: Record<string, string> = {
  perspex: 'Perspex',
  acrylic: 'Acrylic',
  engineering: 'Engineering',
  specialty: 'Specialty',
};
const materialCategoryOrder = ['perspex', 'acrylic', 'engineering', 'specialty'] as const;

const companyLinks: Array<{ label: string; href: string; external?: boolean }> = [
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' },
  { label: 'Gallery', href: '/gallery' },
  { label: 'Industries', href: '/industries' },
  { label: 'FAQs', href: '/faqs' },
  { label: 'Blog', href: '/blog' },
  { label: 'Get a Quote', href: '/quote' },
  { label: 'Buy Online', href: 'https://perspexonline.com.au', external: true },
];
---
<footer class="bg-secondary text-secondary-foreground">
  <div class="container mx-auto px-4 sm:px-6 py-12 sm:py-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-10">
      <!-- Brand -->
      <div class="sm:col-span-2 lg:col-span-1">
        <Image src={logo} alt="P&M Plastics" width={140} height={50} class="h-10 w-auto brightness-0 invert mb-4" />
        <p class="text-sm text-gray-400 leading-relaxed mb-4">
          Custom plastic fabrication & manufacturing. From concept to creation — 30 years on the Gold Coast.
        </p>
        <a href="tel:0755357544" class="text-sm font-medium text-gray-300 hover:text-white transition-colors">
          07 5535 7544
        </a>
        <div class="flex gap-4 mt-4">
          <a href="https://www.facebook.com/profile.php?id=100073639613176" target="_blank" rel="noopener" aria-label="Facebook" class="text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://www.instagram.com/pmplasticsgoldcoast/" target="_blank" rel="noopener" aria-label="Instagram" class="text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider mb-4 text-gray-300">
          <a href="/services" class="hover:text-white transition-colors">Services</a>
        </h3>
        <ul class="space-y-2 text-sm">
          {services.map((s) => (
            <li>
              <a href={`/services/${s.id}`} class="text-gray-400 hover:text-white transition-colors">{s.data.title}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Products -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider mb-4 text-gray-300">
          <a href="/products" class="hover:text-white transition-colors">Products</a>
        </h3>
        <ul class="space-y-1.5 text-sm">
          {productCategoryOrder.map((cat, catIdx) => {
            const items = productsByCategory[cat];
            if (!items?.length) return null;
            return (
              <>
                <li class:list={[catIdx > 0 ? 'pt-3' : '']}>
                  <span class="text-xs font-semibold uppercase tracking-wider text-gray-500">{cat}</span>
                </li>
                {items.map((p) => (
                  <li>
                    <a href={`/products/${p.id}`} class="text-gray-400 hover:text-white transition-colors">{p.data.title}</a>
                  </li>
                ))}
              </>
            );
          })}
        </ul>
      </div>

      <!-- Materials -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider mb-4 text-gray-300">
          <a href="/materials" class="hover:text-white transition-colors">Materials</a>
        </h3>
        <ul class="space-y-1 text-xs">
          {materialCategoryOrder.map((cat, catIdx) => {
            const items = materialsByCategory[cat];
            if (!items?.length) return null;
            return (
              <>
                <li class:list={[catIdx > 0 ? 'pt-3' : '']}>
                  <span class="text-xs font-semibold uppercase tracking-wider text-gray-500">{materialCategoryLabels[cat]}</span>
                </li>
                {items.map((m) => (
                  <li>
                    <a href={`/materials/${m.id}`} class="text-gray-400 hover:text-white transition-colors">{m.data.title}</a>
                  </li>
                ))}
              </>
            );
          })}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider mb-4 text-gray-300">Company</h3>
        <ul class="space-y-2 text-sm">
          {companyLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors"
                {...(link.external ? { target: '_blank', rel: 'noopener' } : {})}
              >
                {link.label}{link.external ? ' \u2197' : ''}
              </a>
            </li>
          ))}
        </ul>
        <div class="mt-6 space-y-1 text-sm text-gray-500">
          <p>9 Leda Drive</p>
          <p>Burleigh Heads QLD 4220</p>
          <p class="pt-1">Mon–Fri: 7:30am – 4:00pm</p>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-gray-700 mt-10 pt-6 text-center text-xs text-gray-500">
      <p>&copy; {new Date().getFullYear()} P&M Plastics. All rights reserved.</p>
    </div>
  </div>
</footer>
