---
import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true;
---
<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <section class="section bg-white">
    <div class="container mx-auto text-center max-w-lg">
      <h1 class="text-6xl font-900 text-primary mb-4">404</h1>
      <p class="text-xl text-muted-foreground mb-8">Page not found. It might have moved or doesn't exist.</p>
      <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
  </section>
</BaseLayout>
