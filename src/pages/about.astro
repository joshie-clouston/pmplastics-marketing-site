---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import storeImage from '../assets/images/branding/pm-plastics-store.jpeg';
import badge from '../assets/images/branding/30-years-badge.png';

export const prerender = true;

const capabilities = [
  {
    title: 'CNC Water Jet Cutting',
    description: 'Precision cutting of virtually any material up to 150mm thick. No heat-affected zones — clean edges, tight tolerances.',
    icon: 'M12 2L4 7v10l8 5 8-5V7l-8-5zM12 22V12M20 7l-8 5-8-5',
  },
  {
    title: 'CNC Vacuum Forming',
    description: 'Custom moulds and formed plastic components for industrial, commercial, and retail applications.',
    icon: 'M4 14h16M4 14V8a4 4 0 014-4h8a4 4 0 014 4v6M4 14v4a2 2 0 002 2h12a2 2 0 002-2v-4',
  },
  {
    title: 'CNC Router Cutting',
    description: 'Complex shapes, profiles, and 3D contours cut with computer-controlled precision in any plastic.',
    icon: 'M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zM14 2v6h6M12 18v-6M9 15l3-3 3 3',
  },
  {
    title: 'CNC Laser Cutting',
    description: 'Fine detail cutting and intricate designs with sub-millimetre accuracy. Ideal for signage and display work.',
    icon: 'M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83',
  },
  {
    title: 'Plastic Thermo Forming',
    description: 'Heat-formed plastic for custom shapes — skylights, covers, guards, panels, and bespoke components.',
    icon: 'M12 9a4 4 0 00-4 4v6a4 4 0 008 0v-6a4 4 0 00-4-4zM12 3v2M5.6 5.6l1.4 1.4M18.4 5.6l-1.4 1.4M3 12h2M19 12h2',
  },
  {
    title: '2D & 3D Laser Engraving',
    description: 'Detailed engraving and etching on acrylic, perspex, and other surfaces. Signage, awards, and branding.',
    icon: 'M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z',
  },
];

const brands = [
  {
    name: 'P&M Plastics',
    description: 'Custom fabrication & manufacturing headquarters in Burleigh Heads.',
    url: 'https://www.pmplastics.com.au',
  },
  {
    name: 'Perspex Online',
    description: 'Queensland\'s authorised reseller of Perspex\u00AE brand acrylic. Buy cut-to-size materials online.',
    url: 'https://perspexonline.com.au',
  },
  {
    name: 'Plastic Online',
    description: 'Full range of plastic sheets, rods, and tubes available for delivery Australia-wide.',
    url: 'https://plasticonline.com.au',
  },
  {
    name: 'Holland Plastics',
    description: 'Our second Gold Coast facility in Molendinar — manufacturing and retail.',
    url: 'https://hollandplastics.com.au',
  },
];
---
<BaseLayout
  title="About Us"
  description="P&M Plastics — over 30 years of custom plastic fabrication on the Gold Coast. Learn about our history, capabilities, workshop, and family of brands."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-secondary text-secondary-foreground">
    <div class="container mx-auto px-4 sm:px-6 py-16 sm:py-24">
      <div class="max-w-3xl" data-animate="fade-up">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-900 leading-[1.1] tracking-tight mb-6">
          About <span class="text-primary">P&M Plastics</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-400 max-w-2xl leading-relaxed">
          Over 30 years of custom plastic fabrication on the Gold Coast. From concept to creation — no job too big or small.
        </p>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-1 bg-primary"></div>
  </section>

  <!-- Our Story -->
  <section class="section bg-white">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
        <div data-animate="fade-up">
          <div class="flex items-center gap-3 mb-6">
            <Image src={badge} alt="30 years on the Gold Coast" width={56} height={56} class="w-14 h-14" />
            <span class="text-sm font-medium text-muted-foreground uppercase tracking-wider">Est. 1991 — Gold Coast</span>
          </div>
          <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-4">Our Story</h2>
          <div class="space-y-4 text-muted-foreground leading-relaxed">
            <p>
              P&M Plastics is a privately owned business established in 1991. Owners Adam Boote and Daniel Hargraves are involved in daily operations — you'll find them on the workshop floor, not behind a desk.
            </p>
            <p>
              Over three decades, we've grown from a small Gold Coast workshop into a multi-brand operation with two manufacturing and retail facilities in South East Queensland. Our staff and products are multi-award winners, and our team stays current through ongoing in-house and external training programmes.
            </p>
            <p>
              In April 2013, we were appointed as Queensland's authorised reseller of Perspex<sup>&reg;</sup> brand acrylic — a recognition of our expertise and commitment to quality.
            </p>
          </div>
        </div>
        <div data-animate="scale-in" class="relative">
          <div class="rounded-2xl overflow-hidden shadow-2xl">
            <Image
              src={storeImage}
              alt="P&M Plastics workshop in Burleigh Heads"
              width={600}
              height={400}
              class="w-full h-auto object-cover"
            />
          </div>
          <div class="absolute -bottom-3 -right-3 w-full h-full border-2 border-primary rounded-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Capabilities -->
  <section class="section bg-muted">
    <div class="container mx-auto">
      <div class="text-center mb-12" data-animate="fade-up">
        <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-4">What We Do</h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Full-service plastic fabrication with advanced CNC equipment. Whatever the material, whatever the shape — we make it happen.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6" data-animate="stagger">
        {capabilities.map((item) => (
          <div class="group p-6 rounded-xl border border-border bg-white hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
                <path d={item.icon} />
              </svg>
            </div>
            <h3 class="font-700 text-lg mb-2">{item.title}</h3>
            <p class="text-sm text-muted-foreground leading-relaxed">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Workshop -->
  <section class="section bg-white">
    <div class="container mx-auto">
      <div class="max-w-3xl mx-auto text-center" data-animate="fade-up">
        <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-4">Our Workshop</h2>
        <p class="text-lg text-muted-foreground leading-relaxed mb-6">
          Everything is manufactured in-house at our Burleigh Heads facility. No outsourcing, no middlemen, no delays. When you work with us, your project goes straight to the workshop floor.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-sm text-muted-foreground">
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/><circle cx="12" cy="10" r="3"/></svg>
            <span>9 Leda Drive, Burleigh Heads QLD 4220</span>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            <span>Mon-Fri: 7:30am - 4:00pm</span>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/></svg>
            <a href="tel:0755357544" class="hover:text-primary transition-colors">07 5535 7544</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Brands -->
  <section class="section bg-muted">
    <div class="container mx-auto">
      <div class="text-center mb-12" data-animate="fade-up">
        <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-4">Our Family of Brands</h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Broad-base coverage and professional service for all your plastic needs — across multiple brands and two Gold Coast locations.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 gap-6 max-w-3xl mx-auto" data-animate="stagger">
        {brands.map((brand) => (
          <a href={brand.url} target="_blank" rel="noopener" class="group flex gap-4 p-6 rounded-xl border border-border bg-white hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-accent/15 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-accent">
                <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div>
              <h3 class="font-700 text-lg mb-1 group-hover:text-primary transition-colors">
                {brand.name}
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="inline ml-1 opacity-0 group-hover:opacity-100 transition-opacity"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
              </h3>
              <p class="text-sm text-muted-foreground leading-relaxed">{brand.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-secondary text-secondary-foreground">
    <div class="container mx-auto text-center" data-animate="fade-up">
      <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-4">Ready to Start Your Project?</h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-8 leading-relaxed">
        Whether you need a single prototype or a full production run, we'd love to hear from you. Tell us what you need and we'll get back to you with a quote.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/quote" class="btn btn-primary btn-lg">Get a Quote</a>
        <a href="/contact" class="btn btn-lg border-2 border-gray-600 text-white hover:bg-white/10 transition-colors">Contact Us</a>
      </div>
    </div>
  </section>
</BaseLayout>
