---
import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true;
---
<BaseLayout
  title="Contact Us"
  description="Get in touch with P&M Plastics — 9 Leda Drive, Burleigh Heads QLD 4220. Call 07 5535 7544. Open Mon-Fri 7:30am-4pm."
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-secondary text-secondary-foreground">
    <div class="container mx-auto px-4 sm:px-6 py-16 sm:py-24">
      <div class="max-w-3xl" data-animate="fade-up">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-900 leading-[1.1] tracking-tight mb-6">
          Get in <span class="text-primary">Touch</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-400 max-w-2xl leading-relaxed">
          Drop in, give us a call, or send us a message. We're always happy to chat about your project.
        </p>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-1 bg-primary"></div>
  </section>

  <!-- Contact Details + Map -->
  <section class="section bg-white">
    <div class="container mx-auto">
      <div class="grid lg:grid-cols-2 gap-10 lg:gap-16">
        <!-- Contact Info -->
        <div data-animate="fade-up">
          <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-8">Contact Details</h2>

          <div class="space-y-6">
            <!-- Address -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <div>
                <h3 class="font-700 text-lg mb-1">Address</h3>
                <p class="text-muted-foreground leading-relaxed">
                  9 Leda Drive<br />
                  Burleigh Heads QLD 4220
                </p>
                <a
                  href="https://maps.google.com/?q=9+Leda+Drive+Burleigh+Heads+QLD+4220"
                  target="_blank"
                  rel="noopener"
                  class="inline-flex items-center gap-1 text-sm font-medium text-primary hover:underline mt-1"
                >
                  Get directions
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/></svg>
              </div>
              <div>
                <h3 class="font-700 text-lg mb-1">Phone</h3>
                <a href="tel:0755357544" class="text-muted-foreground hover:text-primary transition-colors text-lg">
                  07 5535 7544
                </a>
              </div>
            </div>

            <!-- Hours -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              </div>
              <div>
                <h3 class="font-700 text-lg mb-1">Opening Hours</h3>
                <div class="text-muted-foreground space-y-1">
                  <p>Monday - Friday: 7:30am - 4:00pm</p>
                  <p>Saturday & Sunday: Closed</p>
                </div>
              </div>
            </div>

            <!-- Social -->
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
              </div>
              <div>
                <h3 class="font-700 text-lg mb-2">Follow Us</h3>
                <div class="flex gap-3">
                  <a
                    href="https://www.facebook.com/profile.php?id=100073639613176"
                    target="_blank"
                    rel="noopener"
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-border hover:border-primary/30 hover:shadow-sm transition-all text-sm font-medium text-foreground"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-[#1877F2]"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                    Facebook
                  </a>
                  <a
                    href="https://www.instagram.com/pmplasticsgoldcoast/"
                    target="_blank"
                    rel="noopener"
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-border hover:border-primary/30 hover:shadow-sm transition-all text-sm font-medium text-foreground"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="text-[#E4405F]"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
                    Instagram
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Map -->
        <div data-animate="scale-in">
          <div class="rounded-2xl overflow-hidden shadow-lg border border-border h-full min-h-[400px]">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3524.4!2d153.4283!3d-28.1069!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b911a7b5e5b5e5b%3A0x0!2s9+Leda+Dr%2C+Burleigh+Heads+QLD+4220!5e0!3m2!1sen!2sau!4v1700000000000!5m2!1sen!2sau"
              width="100%"
              height="100%"
              style="border:0; min-height:400px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="P&M Plastics location — 9 Leda Drive, Burleigh Heads"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Send a Message / Quote CTA -->
  <section class="section bg-muted">
    <div class="container mx-auto">
      <div class="max-w-2xl mx-auto text-center" data-animate="fade-up">
        <h2 class="text-3xl sm:text-4xl font-800 tracking-tight mb-4">Send Us a Message</h2>
        <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
          Got a project in mind? Need a quote or just have a question? Use our quote form to tell us what you need and we'll get back to you promptly.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a href="/quote" class="btn btn-primary btn-lg">
            Request a Quote
          </a>
          <a href="tel:0755357544" class="btn btn-outline btn-lg">
            Call 07 5535 7544
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="section bg-white">
    <div class="container mx-auto">
      <div class="text-center mb-10" data-animate="fade-up">
        <h2 class="text-2xl sm:text-3xl font-800 tracking-tight mb-4">Quick Links</h2>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-4xl mx-auto" data-animate="stagger">
        <a href="/quote" class="group p-5 rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
          </div>
          <h3 class="font-700 text-sm">Get a Quote</h3>
        </a>

        <a href="https://perspexonline.com.au" target="_blank" rel="noopener" class="group p-5 rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 002 1.61h9.72a2 2 0 002-1.61L23 6H6"/></svg>
          </div>
          <h3 class="font-700 text-sm">Buy Materials Online</h3>
        </a>

        <a href="/about" class="group p-5 rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 00-3-3.87"/><path d="M16 3.13a4 4 0 010 7.75"/></svg>
          </div>
          <h3 class="font-700 text-sm">About Us</h3>
        </a>

        <a href="/" class="group p-5 rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center mx-auto mb-3 group-hover:bg-primary/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          </div>
          <h3 class="font-700 text-sm">Home</h3>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
