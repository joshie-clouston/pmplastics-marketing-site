---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContentCard from '../../components/ui/ContentCard.astro';
import SecondaryCTA from '../../components/sections/SecondaryCTA.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import ItemListSchema from '../../components/schema/ItemListSchema.astro';
import { resolveImage } from '../../lib/images';

export const prerender = true;

const industries = (await getCollection('industries', ({ data }) => !data.draft))
  .sort((a, b) => a.data.order - b.data.order);
---
<BaseLayout title="Industries We Serve" description="Plastic fabrication for industrial, marine, automotive, commercial, domestic, and more. P&M Plastics, Gold Coast.">
  <BreadcrumbSchema items={[{ name: 'Industries', href: '/industries' }]} slot="structured-data" />
  <ItemListSchema name="Industries We Serve" description="Plastic fabrication services across every industry sector" items={industries.map((i) => ({ name: i.data.title, url: `/industries/${i.id}` }))} slot="structured-data" />

  <section class="section bg-secondary text-secondary-foreground">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl font-900 tracking-tight mb-4" data-animate="fade-up">Industries We Serve</h1>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto" data-animate="fade-up">
        30 years of custom plastic fabrication across every industry. Whatever your sector, we've got the experience.
      </p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container mx-auto">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6" data-animate="stagger">
        {industries.map((industry) => (
          <ContentCard
            href={`/industries/${industry.id}`}
            title={industry.data.title}
            description={industry.data.description}
            image={industry.data.image ? resolveImage(industry.data.image) : undefined}
          />
        ))}
      </div>
    </div>
  </section>

  <SecondaryCTA
    heading="Don't see your industry?"
    description="We work with every sector. Tell us what you need and we'll figure out the best approach."
  />
</BaseLayout>
