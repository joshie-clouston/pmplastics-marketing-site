---
import { Image } from 'astro:assets';
import logo from '../../assets/images/logos/pm-plastics-logo-alt.png';
---
<footer class="bg-secondary text-secondary-foreground">
  <div class="container mx-auto px-4 sm:px-6 py-12 sm:py-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Brand -->
      <div class="sm:col-span-2 lg:col-span-1">
        <Image src={logo} alt="P&M Plastics" width={140} height={50} class="h-10 w-auto brightness-0 invert mb-4" />
        <p class="text-sm text-gray-400 leading-relaxed">
          Custom plastic fabrication & manufacturing. From concept to creation — 30 years on the Gold Coast.
        </p>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider mb-4 text-gray-300">Services</h3>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>CNC Water Jet Cutting</li>
          <li>CNC Vacuum Forming</li>
          <li>CNC Router Cutting</li>
          <li>CNC Laser Cutting</li>
          <li>Plastic Thermo Forming</li>
          <li>2D & 3D Laser Engraving</li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider mb-4 text-gray-300">Contact</h3>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>
            <a href="tel:0755357544" class="hover:text-white transition-colors">07 5535 7544</a>
          </li>
          <li>9 Leda Drive</li>
          <li>Burleigh Heads QLD 4220</li>
          <li class="pt-2">Mon–Fri: 7:30am – 4:00pm</li>
        </ul>
      </div>

      <!-- Links -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider mb-4 text-gray-300">Quick Links</h3>
        <ul class="space-y-2 text-sm text-gray-400">
          <li><a href="/quote" class="hover:text-white transition-colors">Get a Quote</a></li>
          <li>
            <a href="https://perspexonline.com.au" target="_blank" rel="noopener" class="hover:text-white transition-colors">
              Buy Materials Online ↗
            </a>
          </li>
        </ul>
        <div class="flex gap-4 mt-6">
          <a href="https://www.facebook.com/profile.php?id=100073639613176" target="_blank" rel="noopener" aria-label="Facebook" class="text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://www.instagram.com/pmplasticsgoldcoast/" target="_blank" rel="noopener" aria-label="Instagram" class="text-gray-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
