---
import { Image } from 'astro:assets';
import heroImage from '../../assets/images/branding/hero-banner.png';
import badge from '../../assets/images/branding/30-years-badge.png';
---
<section class="relative overflow-hidden bg-secondary text-secondary-foreground">
  <div class="container mx-auto px-4 sm:px-6 py-16 sm:py-24 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">
      <!-- Copy -->
      <div data-animate="fade-up">
        <div class="flex items-center gap-3 mb-6">
          <Image src={badge} alt="30 years on the Gold Coast" width={56} height={56} class="w-14 h-14" />
          <span class="text-sm font-medium text-gray-400 uppercase tracking-wider">Est. 1995 — Gold Coast</span>
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-900 leading-[1.1] tracking-tight mb-6">
          Custom Plastic<br />
          <span class="text-primary">Fabrication</span> &<br />
          Manufacturing
        </h1>

        <p class="text-lg sm:text-xl text-gray-400 max-w-lg mb-8 leading-relaxed">
          From concept to creation. CNC cutting, laser engraving, vacuum forming, and more — no job too big or small.
        </p>

        <div class="flex flex-col sm:flex-row gap-3">
          <a href="https://perspexonline.com.au" target="_blank" rel="noopener" class="btn btn-primary btn-lg">
            Buy Materials Online
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
          </a>
          <a href="/quote" class="btn btn-lg border-2 border-gray-600 text-white hover:bg-white/10 transition-colors">
            Get a Quote
          </a>
        </div>
      </div>

      <!-- Hero image -->
      <div data-animate="scale-in" class="relative">
        <div class="rounded-2xl overflow-hidden shadow-2xl">
          <Image
            src={heroImage}
            alt="P&M Plastics workshop — custom plastic fabrication on the Gold Coast"
            width={640}
            height={480}
            class="w-full h-auto object-cover"
          />
        </div>
        <!-- Accent stripe -->
        <div class="absolute -bottom-3 -right-3 w-full h-full border-2 border-primary rounded-2xl -z-10"></div>
      </div>
    </div>
  </div>

  <!-- Bottom edge -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-primary"></div>
</section>
