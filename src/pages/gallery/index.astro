---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export const prerender = true;

const galleries = (await getCollection('gallery', ({ data }) => !data.draft))
  .sort((a, b) => a.data.order - b.data.order);
---
<BaseLayout title="Gallery" description="See our work â€” custom plastic fabrication, vacuum forming, tanks, display products, and more. P&M Plastics, Gold Coast.">
  <section class="section bg-secondary text-secondary-foreground">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl font-900 tracking-tight mb-4" data-animate="fade-up">Gallery</h1>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto" data-animate="fade-up">
        30 years of custom plastic fabrication. Browse our work by category.
      </p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container mx-auto">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6" data-animate="stagger">
        {galleries.map((gallery) => (
          <a href={`/gallery/${gallery.id}`} class="group block p-6 rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <h2 class="font-700 text-xl mb-2 group-hover:text-primary transition-colors">{gallery.data.title}</h2>
            <p class="text-muted-foreground text-sm leading-relaxed mb-4">{gallery.data.description}</p>
            <span class="text-primary text-sm font-600 inline-flex items-center gap-1">
              View gallery
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section bg-muted">
    <div class="container mx-auto text-center">
      <h2 class="text-2xl sm:text-3xl font-800 mb-4">Like what you see?</h2>
      <p class="text-muted-foreground mb-6">Let's talk about your project.</p>
      <a href="/quote" class="btn btn-primary btn-lg">Get a Quote</a>
    </div>
  </section>
</BaseLayout>
