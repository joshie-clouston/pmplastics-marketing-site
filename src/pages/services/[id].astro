---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import DetailHero from '../../components/layout/DetailHero.astro';
import SecondaryCTA from '../../components/sections/SecondaryCTA.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import ServiceSchema from '../../components/schema/ServiceSchema.astro';
import { resolveImage } from '../../lib/images';

export const prerender = true;

export async function getStaticPaths() {
  const services = await getCollection('services', ({ data }) => !data.draft);
  return services.map((entry) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const heroImage = entry.data.image ? resolveImage(entry.data.image) : undefined;
---
<BaseLayout title={entry.data.title} description={entry.data.description}>
  <BreadcrumbSchema items={[{ name: 'Services', href: '/services' }, { name: entry.data.title, href: `/services/${entry.id}` }]} slot="structured-data" />
  <ServiceSchema name={entry.data.title} description={entry.data.description} url={`/services/${entry.id}`} slot="structured-data" />

  <DetailHero
    title={entry.data.headline || entry.data.title}
    description={entry.data.description}
    backLink="/services"
    backLabel="All Services"
    image={heroImage}
  />

  <section class="section bg-white">
    <div class="container mx-auto max-w-3xl">
      <div class="prose prose-lg max-w-none" data-animate="fade-up">
        <Content />
      </div>

      {entry.data.features.length > 0 && (
        <div class="mt-12 p-6 bg-muted rounded-xl" data-animate="fade-up">
          <h2 class="font-700 text-xl mb-4">Key Capabilities</h2>
          <ul class="grid sm:grid-cols-2 gap-2">
            {entry.data.features.map((feature) => (
              <li class="flex items-start gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0 mt-0.5"><polyline points="20 6 9 17 4 12"/></svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      )}

      {entry.data.applications.length > 0 && (
        <div class="mt-8 p-6 bg-muted rounded-xl" data-animate="fade-up">
          <h2 class="font-700 text-xl mb-4">Common Applications</h2>
          <ul class="grid sm:grid-cols-2 gap-2">
            {entry.data.applications.map((app) => (
              <li class="flex items-start gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-accent flex-shrink-0 mt-0.5"><polyline points="20 6 9 17 4 12"/></svg>
                {app}
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </section>

  <SecondaryCTA
    heading={`Need ${entry.data.title}?`}
    description="Tell us about your project and we'll get back to you with a quote."
    quoteType={entry.data.title}
  />
</BaseLayout>
