{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "pmplastics-marketing-site",
  "main": "dist/_worker.js/index.js",
  "compatibility_date": "2025-01-01",
  "compatibility_flags": ["nodejs_compat", "global_fetch_strictly_public"],
  "assets": {
    "binding": "ASSETS",
    "directory": "./dist",
    "not_found_handling": "404-page"
  },
  "observability": {
    "enabled": true
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "pmplastics",
      "database_id": "placeholder-update-after-creation"
    }
  ],
  "vars": {
    "RESEND_FROM_EMAIL": "hello@pmplastics.com.au",
    "NOTIFICATION_EMAIL": "team@pmplastics.com.au"
  }
  // Note: RESEND_API_KEY should be set as a secret via:
  // wrangler secret put RESEND_API_KEY
}
