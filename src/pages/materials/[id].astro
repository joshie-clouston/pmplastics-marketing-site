---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SecondaryCTA from '../../components/sections/SecondaryCTA.astro';

export const prerender = true;

export async function getStaticPaths() {
  const materials = await getCollection('materials', ({ data }) => !data.draft);
  return materials.map((entry) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---
<BaseLayout title={`${entry.data.title} â€” Plastic Materials Gold Coast`} description={entry.data.description}>
  <section class="section bg-secondary text-secondary-foreground">
    <div class="container mx-auto max-w-3xl">
      <a href="/materials" class="inline-flex items-center gap-1 text-sm font-medium text-gray-400 hover:text-white mb-6 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
        All Materials
      </a>
      <h1 class="text-4xl sm:text-5xl font-900 tracking-tight mb-4" data-animate="fade-up">
        {entry.data.headline || entry.data.title}
      </h1>
      <p class="text-lg text-gray-400" data-animate="fade-up">{entry.data.description}</p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container mx-auto max-w-3xl">
      <div class="prose prose-lg max-w-none" data-animate="fade-up">
        <Content />
      </div>

      {entry.data.properties.length > 0 && (
        <div class="mt-12 p-6 bg-muted rounded-xl" data-animate="fade-up">
          <h2 class="font-700 text-xl mb-4">Key Properties</h2>
          <ul class="grid sm:grid-cols-2 gap-2">
            {entry.data.properties.map((prop) => (
              <li class="flex items-start gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0 mt-0.5"><polyline points="20 6 9 17 4 12"/></svg>
                {prop}
              </li>
            ))}
          </ul>
        </div>
      )}

      {entry.data.formats.length > 0 && (
        <div class="mt-6 p-6 bg-muted rounded-xl" data-animate="fade-up">
          <h2 class="font-700 text-xl mb-4">Available Formats</h2>
          <div class="flex flex-wrap gap-2">
            {entry.data.formats.map((format) => (
              <span class="px-3 py-1.5 text-xs font-medium bg-white rounded-full border border-border">{format}</span>
            ))}
          </div>
        </div>
      )}

      {entry.data.applications.length > 0 && (
        <div class="mt-6 p-6 bg-muted rounded-xl" data-animate="fade-up">
          <h2 class="font-700 text-xl mb-4">Common Applications</h2>
          <ul class="grid sm:grid-cols-2 gap-2">
            {entry.data.applications.map((app) => (
              <li class="flex items-start gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-accent flex-shrink-0 mt-0.5"><polyline points="20 6 9 17 4 12"/></svg>
                {app}
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </section>

  <SecondaryCTA
    heading={`Need ${entry.data.title}?`}
    description="Buy online or get a custom quote for your project."
    primaryLabel="Buy Online"
    primaryHref="https://perspexonline.com.au"
    primaryExternal={true}
    secondaryLabel="Get a Quote"
    secondaryHref="/quote?type=cut-to-size"
  />
</BaseLayout>
